<div class="page-header">
  <h3>Lead <%= @lead.dw_agn %> <%= @lead.batchno %>-<%= @lead.recno %> <%= @lead.firstname %> <%= @lead.lastname %></h3>
</div>


<div class="container">

  <div class="row">
    <div class="col-xs-6"><%= @lead.firstname %> <%= @lead.lastname %><br>
      <%= @lead.address %><br>
      <%= @lead.city %>, <%= @lead.state %>  <%= @lead.zip %><br>
      <% if @lat != nil  %><img src="https://maps.googleapis.com/maps/api/staticmap?center=<%= @lat %>,<%= @long %>&zoom=17&size=400x400&key=AIzaSyCcx5KIGriBpoW_IVL6XPF0ATamX7zg8vc" alt=""><% end  %><br><br>
      <dt>Status</dt>
      <dd><%= @lead.status %></dd>
    </div>
    <div class="col-xs-6"><a href="/pngs/<%= @lead.pdf %>.png" class="thumbnail"><img src="/pngs/<%= @lead.pdf %>.png" class="img-responsive" alt="Responsive image"></a></div>
  </div>
  <div class="row">
    <div class="col-xs-6"><dt>Dob</dt>
      <dd><%= @lead.dob %></dd>

      <dt>Sdob</dt>
      <dd><%= @lead.sdob %></dd>

      <dt>Smoker</dt>
      <dd><%= @lead.smoker %></dd>

      <dt>Spousesmoke</dt>
      <dd><%= @lead.spousesmoke %></dd>
      <dt>Occupation</dt>
      <dd><%= @lead.occupation %></dd>
    </div>
    <div class="col-xs-6">
      <dt>Hphone</dt>
      <dd><%= @lead.hphone %></dd>

      <dt>Wphone</dt>
      <dd><%= @lead.wphone %></dd>

      <dt>Cphone</dt>
      <dd><%= @lead.cphone %></dd>


      <dt>Email</dt>
      <dd><%= @lead.email %></dd>

    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">


            <dt>Premium</dt>
            <dd><%= @lead.premium %></dd>



            <dt>Agent</dt>
            <dd><%= @lead.agent_id %></dd>







            <dt>Policy</dt>
            <dd><%= @lead.policy %></dd>

            <dt>Agency</dt>
            <dd><%= @lead.agency_id %></dd>


    </div>
  </div>
</div>






<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <form class="" action="/create_appointment" method="post">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
        <input type="hidden" name="lead_id" value="<%= @lead.id %>">
        <input type="hidden" name="agent_id" value="<%= current_agent.id %>">
        <input type="hidden" name="agency_id" value="<%= @lead.agency_id %>">
        <input type="hidden" name="ref" value="lead">
        <div class="form-group">
          <label for="name" class="control-label">
            date
          </label>

          <input type="date" id="appt_date" name="appt_date" placeholder="Date" class="form-control" >
          <input type="time" id="appt_time" name="appt_time" placeholder="Time" class="form-control" >
        </div>

        <button class="btn btn-success">
          Create Appointment
        </button>
      </form>

      <p>Current Appointments</p>
      <table class="table table-striped table-hover">
        <tr>
          <th>Appt time</th>
          <th>Appt date</th>
          <th>Lead</th>
          <th>Agent</th>
          <th>Outcome</th>
          <th>Notes</th>
          <th>Agency</th>
          <th>Actions</th>
        </tr>
      <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.appt_time %></td>
        <td><%= appointment.appt_date %></td>
        <td><%= appointment.lead_id %></td>
        <td><%= appointment.agent_id %></td>
        <td><%= appointment.outcome %></td>
        <td><%= appointment.notes %></td>
        <td><%= appointment.agency_id %></td>
        <td>
          <a href="/appointments/<%= appointment.id %>" class="btn btn-primary">Show</a>
          <a href="/appointments/<%= appointment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_appointment/<%= appointment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>





    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/leads" class="btn btn-primary">
        Back
      </a>
      <a href="/leads/<%= @lead.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_lead/<%= @lead.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
